{% extends 'base.html.twig' %}

{% block title %}Votre commande{% endblock %}
{% block body %}
    <h2>Récapitulatif de réservation</h2>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Nom</th>
            {% for lastname in lastnames %}
                <td>{{ lastname }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Prénom</th>
            {% for firstname in firstnames %}
                <td>{{ firstname }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Pays</th>
            {% for country in countries %}
               <td>{{ country }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Date de naissance</th>
            {% for birthdate in birthdates %}
                <td>{{ birthdate|date('d/m/Y') }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Tarif réduit ?</th>
            {% for tariff in tariffs %}
                {% if tariff == 1 %}
                        <td>Oui</td>
                    {% else %}
                        <td>Non</td>
                {% endif %}
            {% endfor %}
        </tr>
        <tr>
            <th>Prix par billet</th>
            {% for price in ticketPrice %}
                <td><strong>{{ price }} €</strong></td>
            {% endfor %}
        </tr>
    </table>
    <h4 class="text-right">Total: {{ total }} €</h4>


    <form action="{{ path('summary') }}" method="POST">
        <script
                src="URL_DE_STRIPE/checkout.js" class="stripe-button"
                data-key="pk_test_LQgIJa9tPe000ePbsB6TdzAF"
                data-amount="99500"
                data-name="oc-stripe"
                data-description="Widget"
                data-locale="auto"
                data-currency="eur">
        </script>
    </form>


{% endblock %}